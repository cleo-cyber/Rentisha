@model Rentisha.Models.Properties

@{
    ViewBag.Title = "DetailsListing";

}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
    <link href="~/Content/css/Details.css" rel="stylesheet" />
    <title>Details</title>
</head>

<body>





    <div id="carouselExampleIndicators" class="carousel slide carousel-fade">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner item-show">
            <div class="carousel-item active">
                <img src="~/Content/Images/house1.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Content/Images/house2.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Content/Images/house3.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <div class="containeer">
        <div class="left">
            <div class="property">
                <div class="propName">

                    <div id="propProperties">
                        <small>Rent</small>
                        <h2>Spad House</h2>
                        <p>Nairobi</p>
                        <h3>$435345</h3>
                    </div>
                    <div class="p-features">
                        <div class="dits">
                            <span class="material-icons-sharp">bed</span>
                            <small>3 Beds</small>

                        </div>
                        <div class="dits">
                            <span class="material-icons-sharp">bathtub</span>
                            <small>2 Baths</small>

                        </div>
                        <div class="dits">
                            <span class="material-icons-sharp">open_with</span>
                            <small>1200 sqft</small>

                        </div>
                    </div>
                </div>

                <div class="accord">
                    <ul id="accordion-item">
                        <li>
                            <label for="first">Details and features <span class="opener">&#x3e</span></label>

                            <div class="content">
                                <h3>Area Size (sqft) <span>3</span></h3>
                                <h3>Bedrooom <span>3</span></h3>
                                <h3>Washroom <span>2</span></h3>
                            </div>
                        </li>
                    </ul>
                    <ul id="accordion-item">
                        <li>
                            <label for="second">Description <span class="opener">&#x3e</span></label>

                            <div class="content">
                                Lorem ipsum dolor sit amet consectetur adipisicing elit. Quasi dignissimos harum
                                consectetur eum cumque corrupti eveniet non explicabo, minus odit reprehenderit commodi
                                asperiores dolorum ducimus veritatis quaerat fugiat deleniti voluptatem.

                            </div>
                        </li>
                    </ul>
                </div>

                <div class="feature">

                </div>
            </div>
        </div>
        <div class="right">

            <div class="contact">
                <h3>Contact Realtor</h3>
                <form action="#" autocomplete="off">
                    <label for="name">Name</label>
                    <input type="text" placeholder="Your Name" required>
                    <label for="Email">Email</label>
                    <input type="email" placeholder="Your Email" required>
                    <label for="Phone No">Phone No</label>
                    <input type="text" placeholder="e.g +254 071223434">
                    <label for="message">Message</label>
                    <textarea name="message" id="tarea" cols="30" rows="10" placeholder="Im interested in this property"></textarea>
                    <button type="submit">Send Message</button>
                </form>
            </div>
        </div>
    </div>

    <script src="~/Content/Js/Details.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"
            integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>
</body>

</html>
