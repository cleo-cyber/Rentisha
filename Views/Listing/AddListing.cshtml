
@{
  
    Layout = null;
}
@model Rentisha.Models.Listing

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="~/Content/css/Addlisting.css" rel="stylesheet" />
</head>

<body>

    <div id="regForm">
        <h2>Add new listing</h2>
        @using (Html.BeginForm("AddListing","Listing",FormMethod.Post))
        {
            @Html.HiddenFor(model => model.Id)

            <div class="tab">
                <div class="row">
                    <p>Please be as specific as possible</p>
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.PropertyName, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.PropertyName, new { @class = "form-control", @id = "propertyName", placeholder="e.g Giraffe Homes" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.County, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.County, new { @class = "form-control", @id = "city",placeholder="e.g Kajiado" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Town, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Town, new { @class = "form-control", @id = "area", placeholder="eg, Rongai"})
                    </div>
                    <div class="col-md-8">
                        @Html.LabelFor(model => model.PropertyType, new { @class = "form-label" })
                        @Html.EditorFor(model => model.Town, new { @class = "form-control" })
                    </div>
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.Rent, new { @class = "form-label" })
                        @Html.EditorFor(model => model.Rent, new { @class = "form-control" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Rooms, new { @class = "form-label" })
                        @Html.EditorFor(model => model.Rooms, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="tab">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.Price, new { @class = "form-label" })
                    @Html.EditorFor(model => model.Price, new { @class = "form-control", @id = "txtExampleBoxOne" })
                </div>


            </div>
            <div class="tab">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.Facilities, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Facilities, new { @class = "form-control", @id = "txtExampleBoxOne" })
                </div>


            </div>
            <div style="overflow:auto;">
                <div style="float:right;">
                    <button type="button" id="prevBtn" onclick="nextPrev(-1)">Previous</button>
                    <button type="button" id="nextBtn" onclick="nextPrev(1)">Next</button>
                </div>
              
            </div>
           
            <!-- Circles which indicates the steps of the form: -->
            <div style="text-align:center;margin-top:40px;">
                <span class="step"></span>
                <span class="step"></span>
                <span class="step"></span>
                <span class="step"></span>
            </div>

        }


        <!-- One "tab" for each step in the form: -->




    </div>
 

    <script src="~/Content/Js/addListing.js"></script>
</body>
</html>